{
  "name": "maxim030690/wp-open-ai-posts",
  "description": "A WordPress plugin to generate posts using the OpenAI API",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=8.0",
    "composer/installers": "^2.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "OpenAIPlugin\\": "wp-open-ai-posts/includes/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "secure-http": true
  },
  "scripts": {
    "post-install-cmd": [
      "composer run-script post-create-project-cmd"
    ],
    "post-create-project-cmd": [
      "@php -r \"copy('.env.example', '.env');\""
    ]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/maxim030690/wp-open-ai-posts"
    },
    {
      "type": "vcs",
      "url": "https://github.com/wpackagist/wpackagist"
    }
  ]
}
